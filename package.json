{
	"name": "classConverter",
	"displayName": "classConverter",
	"description": "BE->FE classes",
	"publisher": "lorenzocruccu",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:classConverter.java2typescript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "BE -> FE classes",
				"properties": {
					"be2fe.autoImplement": {
						"type": "boolean",
						"default": true,
						"description": "Automatically add class @Transform(boolTransform) attributes when possible",
						"scope": "classtransformer-autoimplement"
					},
					"be2fe.classTransformerDate": {
						"type": "string",
						"default": "insdate moddate lastdate lastseen",
						"description": "Automatically add @Transform(dataTransform) above this list of words. Must separate each word only with a space to make this work properly",
						"scope": "be2fe-utilities"
					},
					"be2fe.utilities": {
						"type": "string",
						"default": "",
						"description": "Add a comment with your utilities. By default it will add some class transformer utilities",
						"scope": "be2fe-utilities"
					}
				}
			}
		],
		"commands": [
			{
				"category": "be2fe",
				"command": "classConverter.java2typescript",
				"title": "[java2typescript]: BE Java class -> FE Typescript class"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "classConverter.java2typescript",
					"when": "editorHasSelection"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
